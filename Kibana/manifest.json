{
    "name": "K",
    "version": "2.0.0",
    "manifest_version": 2,
    "description": "Kibana",
    "browser_action": {
        "default_title": "Kibana"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "persistent": true,
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "tabs",
        "activeTab",
        "background",
        "downloads",
        "cookies",
        "storage",
        "unlimitedStorage",
        "notifications",
        "webRequest",
        "webRequestBlocking"
    ]
}